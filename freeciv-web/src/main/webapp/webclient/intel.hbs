<div id="intel_tabs">
  <ul>
    <div id="ixtjkiller3" style="max-width:100%; height:inherit; position: absolute; cursor: pointer; background: rgba(0, 0, 0, 0); overflow: hidden; left: 0px; top: 0px; z-index: 999 !important;" onclick="clickMask(event, 3)"><img style="max-width:inherit; height:100%" id="ixtjkiller33" src="/images/ixtjkiller.png"></div>
    <li><a href="#intel_tabs-overview">Nation</a></li>
    <li><a href="#intel_tabs-diplomacy">Diplomacy</a></li>
    <li><a href="#intel_tabs-technology">Tech</a></li>
    <li><a href="#intel_tabs-wonders">Wonders</a></li>
  </ul>

  <div id="intel_tabs-overview" class="inteldlg_tabs">
    <table class="vert-attr-list">
    <tr><th>Ruler</th><td id="intel_ruler">{{ruler}}</td></tr>
    <tr><th>Government</th><td id="intel_gov">{{government}}</td></tr>
    <tr><th>Capital</th><td id="intel_capital">{{capital}}</td></tr>
    <tr><th>Gold</th><td class="gold_text">{{gold}}</td></tr>
    <tr><th>&nbsp;</th><td></td></tr>
    <tr><th>Tax</th><td class="gold_text">{{tax}}</td></tr>
    <tr><th>Science</th><td class="sci_text">{{science}}</td></tr>
    <tr><th>Luxury</th><td class="lux_text">{{luxury}}</td></tr>
    <tr><th>&nbsp;</th><td></td></tr>
    <tr><th>Researching</th><td id="intel_researching">{{researching}}</td></tr>
    </table>
  </div> 

  <div id="intel_tabs-diplomacy" class="inteldlg_tabs">
    <ul>{{#each dipl}}
    <li>{{state}}<ul>
    {{#each nations}}<li>{{this}}</li>{{/each}}
    </ul></li>
    {{else}}
    {{!-- Shouldn't happen, as they have contacted us --}}
    No contact with other nations
    {{/each}}</ul>
  </div> 

  <div id="intel_tabs-technology" class="inteldlg_tabs">
    <ul>{{#each tech}}
    <li class="tech-{{who}}">{{name}}</li>
    {{else}}
    This exciting tribe does not seem to invest in technology.
    {{/each}}</ul>
  </div> 
 
  <div id="intel_tabs-wonders" class="inteldlg_tabs">
    <ul>{{#each wndr}}
    <li style="cursor:default" title="{{helptext}}"">{{name}}</li>
    {{else}}
    This exciting tribe does not seem to have any wonders.
    {{/each}}</ul>
  </div>

</div>  
